sizer(w,h)
    width: w
    height: h


.BannerSection1
    sizer(100%, 100vh)
    background: linear-gradient(180deg, rgba(15, 26, 30, 0.136) 1.56% , rgba(15, 26, 30, 1) 100%), url(img/bg.svg);
    background-position: center;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
.cyberpunk__girl
    position: absolute
    top: 80px
    left: 1190px
    z-index 1
    transform: matrix(1, 0, 0, 1, 0, 0);
    animation: 2s infinite alternate imgrotate;
.girl__img
    z-index 1
    position: absolute
.girl__blur
    position: absolute
    top 3px
    left: 10px
    z-index 0
.text__con
    position relative
    margin-top 154px
    margin-left 132px
    display: flex
    flex-direction: column
    z-index 2
.top__text
    display: flex
    align-content: center
    gap 27px
.bigger__t
    font-family: 'Iceland';
    font-style: normal;
    font-weight: 400;
    font-size: 110px;
    line-height: 75%;
    /* identical to box height, or 82px */

    text-transform: uppercase;

    /* White */

    color: #FFFFFF;


.smaller__text
    display: flex
    align-items: center
    /* Desktop/Tag */
    text-align: center
    font-family: 'Iceland';
    font-style: normal;
    font-weight: 400;
    font-size: 14px;
    line-height: 75%;
    /* identical to box height, or 10px */

    letter-spacing: 0.1em;
    text-transform: uppercase;

    /* Gold */

    color: #EDB614;
.text
    font-family: 'Iceland';
    font-style: normal;
    font-weight: 400;
    font-size: 110px;
    line-height: 75%;
    /* identical to box height, or 82px */

    text-transform: uppercase;

    color: #FFFFFF;
    margin 0
.join__btn
    cursor: pointer
    margin-top 40px
    margin-left 132px
    sizer(214px,59px)
    background: #EDB614
    border-radius: 22px
    border none
    outline: none
    font-family: 'Iceland';
    font-style: normal;
    font-weight: 600;
    font-size: 20px;
    line-height: 75%;
    /* identical to box height, or 15px */
    transition: .3s
    text-transform: uppercase;

    /* Deep Gold */

    color: #342B0F;

.join__btn:hover
    background: rgb(255, 255, 255)
    color black
    transform: translateY(-12px) 
    filter: drop-shadow(0px 15px 0.5rem rgba(255, 255, 255, 0.159));
.links
    display: flex
    flex-direction: column
    margin-top 117px
    margin-left: 132px
    p
        font-family: 'Iceland';
        font-style: normal;
        font-weight: 400;
        font-size: 14px;
        line-height: 75%;
        /* identical to box height, or 10px */

        letter-spacing: 0.1em;
        text-transform: uppercase;

        /* Ocean */

        color: #14EFE6;
.icons
    display: flex
    gap 16px

.icons .img
    sizer(35px, 35px)
    filter: drop-shadow(0px 5px 0.75rem rgba(20, 239, 232, 0.255)); 
    background-image: url(img/Subtract.svg)
    cursor pointer
    transition: 0.2s
    display: flex
    align-items: center
    justify-content: center
.img:hover
    background-image: url(img/Subtract_L.svg)


.arrow
    z-index: 10
    cursor: pointer
    position: fixed
    bottom: 27px
    right: 120px



@keyframes imgrotate {
  from {
    transform: matrix(1, 0, 0, 1, 0, 0);
  }
  to {
    transform: matrix(1, -0.09, -0.09, 1, 0, 0);
  }
}

@media screen and (max-width: 1440px) {
  .cyberpunk__girl {
    left 830px
  }

    .text__con{
        margin-top: 120px 
    }
}